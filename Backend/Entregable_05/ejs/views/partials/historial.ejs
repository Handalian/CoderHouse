<h2 style="color:crimson;">Historial</h2>

<% if(DB_Productos.length > 0){ %> 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Id</th><th>Title</th> <th>Price</th>
            <!-- filas -->
            <% for (const item of DB_Productos) {%> 
            <tr> 
                <td><%=item.id %> </td>
                <td><%=item.title %> </td>
                <td><%=item.price %> </td>
                <td>
                    <img width="30" src="<%=item.thumbnail%>" alt="">
                </td>
            </tr>
            <% } %> 
            <!-- Fin filas -->
        </table>
    </div>
<% } else { %> 
    <h3 class="alert alert-danger">No se encontraron dato</h3>
<% } %> 