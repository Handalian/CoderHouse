                <input class="btn btn-success my-3" type="submit" value="Log in">
            </div>
        </form>
        <hr>
        <div class="text-left">
            <button class="btn btn-success my-3" onclick="location.href = '/api/user/signup'">Go to sign up</button>
        </div>
    </div>
</div>
</div>





