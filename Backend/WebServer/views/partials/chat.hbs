<div class="container m-5">
    <h3>Centro de Mensajes</h3>
    <form>
        <div class="form-group">
            <input type="text" class="form-control" id="user" aria-describedby="userComment" autocomplete="off"
                value="Email"></br>
            <input type="text" class="form-control" id="name" aria-describedby="userComment" autocomplete="off"
                value="Name"></br>
            <input type="text" class="form-control" id="surname" aria-describedby="userComment" autocomplete="off"
                value="Surname"></br>
            <input type="text" class="form-control" id="age" aria-describedby="userComment" autocomplete="off"
                value="Age"></br>
            <input type="text" class="form-control" id="alias" aria-describedby="userComment" autocomplete="off"
                value="Alias"></br>
            <input type="text" class="form-control" id="avatar" aria-describedby="userComment" autocomplete="off"
                value="urlAvatar"></br>
        </div>
        <div class="form-group">
            <label for="contenidoMensaje">Mensaje:</label>
            <textarea class="form-control" id="contenidoMensaje" rows="3"></textarea>
        </div>
        <button class="btn btn-success" onclick="sendMessage()">Enviar</button>
    </form>
    <hr>
    <div id="historial">
        <!-- aqui se renderizan los mensajes recibidos por parte del server -->
    </div>
</div>